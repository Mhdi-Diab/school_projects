<!DOCTYPE html>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<html>
<head>
    <title>Ma puzzleList</title>
    <style>
        a {text-decoration: none; color: black;}
    </style>
</head>

<body>
<div class="container">
    <div class="row">
        <div class="col-md-2">
            <h1>NPuzzle</h1>
        </div>
        <div class="col-md-5" style="margin-top: 25px">
                <form  class="form-inline" action="/puzzle/ajouter/" method="post">
                    <input class="btn btn-success" type="submit" value="Générer"/>
                    <div class="form-group">
                        <input class="form-control" type="text" name="newtodo" id="newtodo"
                               placeholder="Taille entre 3 et 10" />
                    </div>
                </form>
        </div>
        <div class="2" style="margin-top: 25px">
            <form  class="form-inline" action="/puzzle/clear/" method="post">
                <div class="form-group">
                    <input class="btn btn-danger" type="submit" value="Effacer"/>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Puzzle initial</h3>
            <table class="table-bordered" style="min-width: 400px">
                <% puzzle.forEach(function(todo, index) { %>
                <tr>
                    <% todo.forEach(function(puzz, index) { %>
                    <td class="text-center"><h4><%= puzz %></h4></td>
                    <% }); %>
                </tr>
                <% }); %>
            </table>
            <form  class="form-inline" action="/puzzle/solve/" method="post">
                <div class="form-group">
                    <input class="btn btn-default" type="submit" value="Résoudre"/>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <% if (goal) { %>
            <h3>Puzzle final</h3>
            <table class="table-bordered" style="min-width: 400px">
                <% goal.forEach(function(todo, index) { %>
                <tr>
                    <% todo.forEach(function(puzz, index) { %>
                    <td class="text-center"><h4><%= puzz %></h4></td>
                    <% }); %>
                </tr>
                <% }); %>
            </table>
            <% } %>
        </div>
    </div>
    <% if (results && results.path) { %>
    <div class="row">
        <h3>Résultats</h3>
        <% results.path.forEach(function(puzzle, index) { %>
        <div class="col-md-6" style="margin-top: 10px">
            <span class="label label-warning">Mouvement <%= index %></span>
            <table class="table-bordered" style="min-width: 400px">
                <% puzzle.puzzle.forEach(function(puzz) { %>
                <tr>
                    <% puzz.forEach(function(pouet) { %>
                    <% if(pouet == 0) { %>
                    <td style="color:red" class="text-center"><h4><%= pouet %></h4></td>
                    <% } else { %>
                    <td class="text-center"><h4><%= pouet %></h4></td>
                    <% } %>
                    <% }); %>
                </tr>
                <% }) %>
            </table>
        </div>
        <% }); %>
    </div>
    <% } %>

</div>
</body>
</html>